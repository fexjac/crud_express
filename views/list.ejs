<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8">
    <title>CRUD de Compromissos</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="/js/myjs.js"></script>
</head>

<body>
    <div class="container">
        <h1>Lista de Compromissos</h1>
        <% if (inserido) { %>
            <h2>Compromisso inserido com sucesso</h2>
            <% } %>

                <table>
                    <thead>
                        <tr>
                            <th>Descrição</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <form method="post">
                            <% docs.forEach(doc=> { %>
                                <tr>
                                    <td>
                                        <%= doc.descricao %>
                                    </td>
                                    <td>
                                        <%= doc.data %>
                                    </td>
                                 
                                    <td>
                                        <button type="submit" onclick="setHiddenId('<%= doc._id %>')" formaction="/compromissos/update" class="btn-editar">Editar</button>
                                        <button type="submit" onclick="setHiddenId('<%= doc._id %>')" formaction="/compromissos/delete" class="btn-excluir" method="" delete>Excluir</button>
                                    </td>
                                </tr>
                                <% }); %>
                                <input type="hidden" id="hiddenid" name="hiddenid">
                        </form>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"><a href="/compromissos/add"><button type="button">Novo</button></a></td>
                            <td colspan="4"><a href="/"><button type="button">Voltar</button></a></td>
                        </tr>

                    </tfoot>
                </table>
    </div>
</body>

</html>